dev-repo: "https://github.com/struktured/ocaml-profiles.git"
bug-reports: "https://github.com/struktured/ocaml-profiles"

build: [
  ["./configure" "--bindir" bin]
  [make]
]

install: [
  [make "install"]
]

remove: [
  ["ocamlfind" "remove" "ocaml-profiles"]
  ["rm" "-f" "%{bin}%/ocaml-profiles"]
]

depends: [ "oasis" {build} "extlib" "fileutils" "re" "containers" "sequence" "gen" "cmdliner" "shell-support" ]
